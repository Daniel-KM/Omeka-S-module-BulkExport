    <div class="value">
        <pre><?php
            echo $escape(json_encode($export->writerParams(), JSON_PRETTY_PRINT | JSON_UNESCAPED_SLASHES | JSON_UNESCAPED_UNICODE));
        ?></pre>
    </div>
    <h4><?= $escape($translate('Logs')) ?></h4>
