<?php
/**
 * @var \Zend\View\Renderer\PhpRenderer $this
 * @var \BulkExport\Api\Representation\ExporterRepresentation[] $exporters
 * @var \BulkExport\Api\Representation\ExportRepresentation[] $exports
 */

use BulkExport\Interfaces\Configurable as ConfigurableExport;

$translate = $this->plugin('translate');
$escape = $this->plugin('escapeHtml');
$hyperlink = $this->plugin('hyperlink');

$this->htmlElement('body')->appendAttribute('class', 'bulk-exporters bulk-exports browse');
$this->headLink()->appendStylesheet($this->assetUrl('css/bulk-export.css', 'BulkExport'));
?>

<?php echo $this->pageTitle($translate('Bulk export'), 1, $translate('Bulk export')); ?>

<h2><?php echo $escape($translate('Available exporters')); ?></h2>
<?php echo $hyperlink('Add an exporter', $this->url('admin/bulk/default', ['controller' => 'exporter', 'action' => 'add'])); ?>

<?php if (count($exporters)): ?>
<table class="tablesaw batch-edit" data-tablesaw-mode="stack">
    <thead>
        <tr>
            <th><?php echo $escape($translate('Name')); ?></th>
            <th><?php echo $escape($translate('Writer')); ?></th>
        </tr>
    </thead>
    <tbody>
    <?php foreach ($exporters as $exporter): ?>
        <?php $userIsAllowedUpdate = $exporter->userIsAllowed('update'); ?>
        <?php $userIsAllowedDelete = $exporter->userIsAllowed('delete'); ?>
        <tr>
            <td>
                <?php echo $hyperlink($exporter->label(), $this->url('admin/bulk/id', ['controller' => 'exporter', 'action' => 'start', 'id' => $exporter->id()])); ?>
                <ul class="actions">
                    <li><?php echo $exporter->link('', 'start', [
                        'class' => 'fas fa-cloud-download-alt',
                        'title' => $translate('Export'),
                    ]); ?></li>
                    <?php if ($userIsAllowedUpdate): ?>
                    <li><?php echo $exporter->link('', 'edit', [
                        'class' => 'o-icon-edit',
                        'title' => $translate('Edit'),
                    ]); ?></li>
                    <?php endif; ?>
                    <?php if ($userIsAllowedDelete): ?>
                    <li><?php echo $exporter->link('', 'delete', [
                        'class' => 'o-icon-delete',
                        'title' => $translate('Delete'),
                    ]); /*
                    echo $this->hyperlink('', '#', [
                        'data-sidebar-selector' => '#sidebar',
                        'data-sidebar-content-url' => $exporter->url('delete-confirm'),
                        'class' => 'o-icon-delete sidebar-content',
                        'title' => $translate('Delete'),
                    ]); */ ?></li>
                    <?php endif; ?>
                </ul>
            </td>
            <td>
                <?php $writer = $exporter->writer(); ?>
                <?php echo $writer ? $writer->getLabel() : null; ?>
                <?php if ($writer instanceof ConfigurableExport): ?>
                    (<?php echo $hyperlink('Configure', $this->url('admin/bulk/id', ['controller' => 'exporter', 'action' => 'configure-writer', 'id' => $exporter->id()])); ?>)
                <?php endif; ?>
            </td>
        </tr>
    <?php endforeach; ?>
    </tbody>
</table>

<?php endif; ?>

<?php if (!empty($exports)): ?>
    <h2><?php echo $escape($translate('Last exports')); ?></h2>
    <?php echo $hyperlink('See all exports', $this->url('admin/bulk/default', ['controller' => 'export', 'action' => 'index'])); ?>
    <?php echo $this->partial('bulk/admin/export/export-table', ['exports' => $exports]); ?>
<?php endif; ?>
