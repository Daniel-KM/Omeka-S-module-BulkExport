<?php
use Import\Interfaces\Configurable as ConfigurableImport;

$this->htmlElement('body')->appendAttribute('class', 'importer jobs undo');
$escape = $this->plugin('escapeHtml');
$this->headLink()->appendStylesheet($this->assetUrl('css/import.css', 'Import'));
